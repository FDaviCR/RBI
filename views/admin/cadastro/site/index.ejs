<%- include('../../../partials/head.ejs'); %>
	<body>
		<%- include('../../../partials/header-menu/header-cadastro.ejs'); %>
	
		<section class="unidade container-fluid">
			<h1 class="titulo">Unidades</h1>
			<hr>
			<div class="table-data">
				<div class="row justify-content-md-center">
					<div class="table-responsive col-md-8">
						<div class="div-cadastro-table div-btn-voltar-equip row justify-content-between"">
							<a href="/cadastro"><button type="button" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Voltar</button></a>
							<div>
								<a href="/cadastro/site/new"><button type="button" class="btn btn-primary"><i class="bi bi-folder-plus"></i> Novo</button></a>
								<a href="/cadastro/site/archive/view"><button type="button" class="btn btn-secondary"><i class="bi bi-archive-fill"></i> Arquivados</button></a>
							</div>
						</div>
						<table class="table table-striped table-bordered" cellspacing="0" cellpadding="0">
							<thead>
								<tr>
									<th>Site</th>
									<th>FMS</th>
									<th class="actions">Ações</th>
								</tr>
							</thead>
							<tbody>
								<% site.forEach(el=>{ %>
									<tr>
										<th scope="row"><%= el.site %></th>
										<td><%= el.FMS %></td>
										<td>
											<a href="/cadastro/site/<%= el.id %>/equipment/" class="btn btn-success btn-xs">Visualizar</a>
											<a href="/cadastro/site/edit/<%= el.id %>" class="btn btn-warning"><i class="bi bi-pencil-square"></i></i> Editar</a>
											<form method="POST" action="/cadastro/site/archive" style="display: inline;" onsubmit="confirmarArquivo(event, this)">
												<input type="hidden" name="id" value="<%= el.id %>">
												<button class="btn btn-danger"><i class="bi bi-archive"></i> Arquivar</button>
												<!-- <i class="fas fa-trash"></i> -->
												<!-- <i class="fas fa-archive"></i> -->
											</form>
										</td>
									</tr>
								<% }) %>
							</tbody>
						</table>
				
					</div>
				</div> <!-- /#list -->
			</div>  <!-- /#main -->
		</section>
	</body>
