<%- include('../../../partials/head.ejs'); %>
	<body>
		<%- include('../../../partials/header-menu/header-cadastro.ejs'); %>
	
		<section class="unidade container-fluid dataBox">
			<h1 class="titulo">Unidades Arquivadas</h1>
			<hr>
			<div class="row justify-content-md-center">
				<div class="table-responsive col-md-8">
					<a href="/cadastro/site"><button type="button" class="btn btn-secondary mb-3"><i class="bi bi-arrow-left"></i> Voltar</button></a>
					<table class="table table-striped table-bordered" cellspacing="0" cellpadding="0">
						<thead>
							<tr>
								<th>Site</th>
								<th>FMS</th>
								<th class="actions">Ações</th>
							</tr>
						</thead>
						<tbody>
							<% site.forEach(el=>{ %>
								<tr>
									<th scope="row"><%= el.site %></th>
									<td><%= el.FMS %></td>
									<td>
										<a href="/cadastro/site/archive/<%= el.id %>/equipment" class="btn btn-primary btn-xs">Visualizar</a>
										<form method="POST" action="/cadastro/site/restore" style="display: inline;" onsubmit="confirmarRestore(event, this)">
											<input type="hidden" name="id" value="<%= el.id %>">
											<button class="btn btn-success"><i class="bi bi-recycle"></i> Recuperar</button>
										</form>
									</td>
								</tr>
							<% }) %>
						</tbody>
					</table>
				<div>
			</div>
		</section>
	
	</body>
	
	<script>
		function confirmarRestore(event, form){
			event.preventDefault();
			var decision = confirm("Deseja restaurar a unidade?");
			if(decision){
				window.alert("Unidade restaurada!")
				form.submit();
			}else{
				console.log("Foi um acidente");
			}
		}
	</script>
